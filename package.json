{
  "name": "adventure-template",
  "version": "v1.0.0",
  "description": "Create a Node.js app for building production-ready RESTful APIs using Express, by running one command",
  "main": "src/index.js",
  "author": "Altanshagai.O",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=prod node dist/src/index.js",
    "dev": "cross-env NODE_ENV=dev nodemon -L src/index.ts",
    "build": "tsc -p .",
    "test": "jest -c ./jest.unit.json -i --colors --verbose",
    "test:watch": "jest -c ./jest.unit.json -i --watchAll",
    "prepare": "husky install",
    "coverage": "jest -c ./jest.unit.json -i --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **.ts **/*.ts",
    "prettier:fix": "prettier --write **.ts **/*.ts"
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "express",
    "rest",
    "api",
    "postgresql",
    "prisma",
    "es9",
    "jest",
    "docker",
    "joi",
    "eslint",
    "prettier",
    "adventure-template"
  ],
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
